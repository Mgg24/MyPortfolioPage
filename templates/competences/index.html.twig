{% extends 'base.html.twig' %}

{% block title %}Competences index{% endblock %}

{% block body %}
    <h1>Competences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Level</th>
                <th>Framework</th>
                <th>Language</th>
                <th>Tool</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.id }}</td>
                <td>{{ competence.name }}</td>
                <td>{{ competence.description }}</td>
                <td>{{ competence.level }}</td>
                <td>{{ competence.framework }}</td>
                <td>{{ competence.language }}</td>
                <td>{{ competence.tool }}</td>
                <td>
                    <a href="{{ path('app_competences_show', {'id': competence.id}) }}">show</a>
                    <a href="{{ path('app_competences_edit', {'id': competence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_competences_new') }}">Create new</a>
{% endblock %}
